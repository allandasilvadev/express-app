<div class="container text-center">
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered mt-4">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.category}}</td>
                            <td>{{ get_formatted_price this.price }}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            
        </div>
    </div>
</div>

